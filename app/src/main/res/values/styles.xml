<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_blue_300</item>
        <item name="colorPrimaryDark">@color/light_blue_300</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="colorAccent">@color/blue_300</item>
        <item name="android:colorForeground">@android:color/black</item>
    </style>



    <style name="AppIntroTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="IntroEmailButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorButtonNormal">@color/theme_gray</item>
    </style>

    <style name="IntroTwitterButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/light_blue_300</item>
        <item name="colorButtonNormal">@color/light_blue_500</item>
    </style>


    <style name="IntroFacebookButton" pparent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/blue_800</item>
        <item name="colorButtonNormal">@color/blue_900</item>
    </style>



</resources>