<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_follow_done"  />
            </item>
            <item>
                <shape>
                    <solid android:color="@color/light_blue_300"/>
                    <stroke android:width="1dp" android:color="@color/light_blue_300" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_follow_color"  />
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/light_blue_300" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>