<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/musicselect_online_category_search_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/light_blue_300"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="@drawable/search_view_background"
            tools:ignore="UselessParent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="RelativeOverlap,UseCompoundDrawables">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="3dp"
                    android:src="@drawable/ic_action_bar_search"
                    tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry"/>

                <EditText
                    android:id="@+id/musicselect_online_category_search_bar_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_edittext"
                    android:gravity="center_vertical"
                    android:hint="@string/search_people"
                    android:textColorHint="@color/white"
                    android:textSize="15sp"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/musicselect_online_category_grid_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:columnWidth="90dp"
              android:gravity="center"
              android:horizontalSpacing="20dp"
              android:verticalSpacing="20dp"
              android:numColumns="2"
              android:stretchMode="columnWidth"
        />

</LinearLayout>