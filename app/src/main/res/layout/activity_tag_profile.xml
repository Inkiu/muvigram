<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/action_bar"
        android:background="@color/light_blue_300">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back_button"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_action_back"
            android:layout_alignTop="@+id/name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/name"
            android:text="Korea"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@color/light_blue_300"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tag blablabla"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:padding="8dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="post video"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_profile_button"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="24dp">
                    <Button
                        android:text="@string/profile_most_popular"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:id="@+id/popular_button"
                        android:textColor="@color/light_blue_300"
                        android:background="@color/white"
                        android:textAllCaps="false"/>

                    <Button
                        android:text="@string/profile_most_recent"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@color/gray"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/white"
                        android:id="@+id/recent_button"
                        android:textAllCaps="false"/>
                </LinearLayout>

            </LinearLayout>



            <com.estsoft.muvigram.ui.profile.ExpandableHeightGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tag_gridview"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                android:layout_marginTop="5dp"
                android:isScrollContainer="false">
            </com.estsoft.muvigram.ui.profile.ExpandableHeightGridView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
